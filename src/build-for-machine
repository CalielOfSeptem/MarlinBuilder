#!/bin/bash

## Script Setup

set -ex
. $(dirname "$0")/core/version
. $(dirname "$0")/core/env

## Move to Marlin Dir
cd "$V1_ROOT/$MARLINDIR"

## Build
platformio run --project-dir . --silent "$@"

# Copy the output file out here, so we can save it as an artifact
cp .pio/build/*/firmware.[bh]* ../
